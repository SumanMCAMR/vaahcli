<?php

Route::group(
[
    'prefix' => '<%= url+controller_name_lower %>',
    <%if (section_name == 'Backend') { %>
    'middleware' => ['web', 'has.backend.access'],
    <% } else{ %>
    'middleware' => ['web'],
    <% } %>
    'namespace' => '<%= section_name %>',
],
function () {
     //---------------------------------------------------------
     Route::get('/', '<%= controller_name %>Controller@getIndex')
    ->name('vh.<%= section_name_lower %>.<%= folder_name_lower %>.<%= controller_name_lower %>.home');
     //---------------------------------------------------------
     Route::any('/assets', '<%= controller_name %>Controller@getAssets')
    ->name('vh.<%= section_name_lower %>.<%= folder_name_lower %>.<%= controller_name_lower %>.assets');
     //---------------------------------------------------------
     Route::post('/create', '<%= controller_name %>Controller@postCreate')
    ->name('vh.<%= section_name_lower %>.<%= folder_name_lower %>.<%= controller_name_lower %>.create');
     //---------------------------------------------------------
     Route::any('/list', '<%= controller_name %>Controller@getList')
    ->name('vh.<%= section_name_lower %>.<%= folder_name_lower %>.<%= controller_name_lower %>.list');
     //---------------------------------------------------------
     Route::any('/item/{uuid}', '<%= controller_name %>Controller@getItem')
    ->name('vh.<%= section_name_lower %>.<%= folder_name_lower %>.<%= controller_name_lower %>.item');
     //---------------------------------------------------------
     Route::post('/store/{uuid}', '<%= controller_name %>Controller@postStore')
    ->name('vh.<%= section_name_lower %>.<%= folder_name_lower %>.<%= controller_name_lower %>.store');
     //---------------------------------------------------------
     Route::post('/actions/{action_name}', '<%= controller_name %>Controller@postActions')
    ->name('vh.<%= section_name_lower %>.<%= folder_name_lower %>.<%= controller_name_lower %>.actions');
     //---------------------------------------------------------
});
